<?php

require_once('../../parqueautomotor/funciones/class.ezpdf.php');
require('../../parqueautomotor/funciones/fechas.php');
$pdf =& new Cezpdf('letter','');
$pdf->selectFont('../funciones/fonts/Helvetica.afm');
$pdf->ezSetCmMargins(2,2,2.5,2.5);
$pdf->ezStartPageNumbers(565,18,10,'','Pag. {PAGENUM} de {TOTALPAGENUM}',1);
$pdf->addJpegFromFile("../images/encabezado.jpg",47,680,520,89);

$fechs = date("d/m/y");

$all = $pdf->openObject(); //  Aqui se abre la seccion que se repetira (Como un encabezado) en cada Hoja
$pdf->ezSetY(665);
$pdf->saveState(); 
$pdf->line(15,29,575,29);

$pdf->setStrokeColor(0,0,0,1);

$pdf->addText(221,18,10,'Consejos Comunales Registrados');
$pdf->addText(20,18,10,$fechs);
$pdf->restoreState();
$pdf->closeObject();  // Se cierra el encabezado!!!

$pdf->addObject($all,'all');

$conexion = mysql_connect("192.168.1.9", "siaces", "siaces");
mysql_select_db("consejorendicion", $conexion);
$queEmp = "SELECT * FROM consejocomunal INNER JOIN controlregistro ON consejocomunal.registro = controlregistro.nroregistro where controlregistro.cedula='$ci'";
$resEmp = mysql_query($queEmp, $conexion) or die(mysql_error());
$totEmp = mysql_num_rows($resEmp);
$ixx = 0;


// Enumerador de la Tabla
while($datatmp = mysql_fetch_assoc($resEmp)) { 
	$ixx = $ixx+1;
	$data[] = array_merge($datatmp, array('num'=>$ixx));
}
// Se asigna a la variable NUM 

$titles = array(
				'num'=>'<b>Nro</b>',
				'cod_veh'=>'<b>Codigo</b>',
				'placa'=>'<b>Placa</b>',
				'modelo'=>'<b>Modelo</b>',
				
								
			);
$options = array(
//Medidas de la Tabla
				'shadeCol'=>array(0.9,0.9,0.9),
				'xOrientation'=>'center',
				
				'width'=>495
			);
$txtti =  "<b>Informe de Registros por Funcionario</b>\n";
$txttit =  "<b>Consejos Comunales Registrados</b>\n";

$txtt="   Cedula: ".$ci."          Funcionario: ".$nombres." ".$apellidos." ";
$txt="   Cargo: ".$cargo." \n";
$pdf->ezText($txtti,13,array('justification'=>'center'));
$pdf->ezText($txtt, 11);
$pdf->ezText($txt, 11);
$pdf->ezText($txttit,12,array('justification'=>'center'));
$pdf->ezTable($data, $titles, '', $options);
$pdf->ezStream();
						
?>